# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/devresume
MONGODB_URI_TEST=mongodb://localhost:27017/devresume_test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload & Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# PDF Generation
PDF_STORAGE_PATH=./uploads/pdfs
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_HEADLESS=true

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@devresumeforge.com
FROM_NAME=DevResume Forge

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External Services (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Notification webhooks (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PDF_WATERMARK=false
ENABLE_ANALYTICS=false
ENABLE_FILE_UPLOAD=true 